@model BackEndProjeto.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/inicial.css">
    <script defer src="~/js/script.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokedex Online</title>
</head>

<body>
    <header>
        <div class="titulo">
            <img src="assets/1158.png">
            <h1>Pokedex Online</h1>
            <img src="" alt="">
        </div>

        <div class="botao">
            <button onclick="window.location.href='/Login/Index'" class="login">Login</button>
            <button onclick="window.location.href='/Cadastro/Index'" class="cadastro">Cadastrar-se</button>
        </div>
    </header>

    <div class="Pesquisa">
        <p>Nome:</p>
        <input type="text" class="nome" placeholder="Pikachu">

        <p>Tipo:</p>
        <select class="tipo">
            <option value=""></option>
            <option value="bug">Inseto</option>
            <option value="dark">Sombrio</option>
            <option value="dragon">Dragão</option>
            <option value="fairy">Fada</option>
            <option value="fighting">Lutador</option>
            <option value="fire">Fogo</option>
            <option value="flying">Voador</option>
            <option value="ghost">Fantasma</option>
            <option value="grass">Planta</option>
            <option value="ground">Terrestre</option>
            <option value="ice">Gelo</option>
            <option value="normal">Normal</option>
            <option value="poison">Venenoso</option>
            <option value="psychic">Psíquico</option>
            <option value="rock">Pedra</option>
            <option value="steel">Aço</option>
            <option value="water">Água</option>
            <option value="electric">Eletrico</option>

        </select>
    </div>

    <div class="div">
        <div class="tabela"></div>
    </div>

    <footer>
        <h3>All content & design © Pokédex, 2025-2025.</h3>
        <h3 class="privacy">Privacy policy</h3>
    </footer>
</body>
</html>
